<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="contractsTable"
        messagesPack="com.company.spmu.web.contract">
    <data readOnly="true">
        <collection id="contractsDc"
                    class="com.company.spmu.entity.Contract"
                    view="_local">
            <loader id="contractsDl">
                <query>
                    <![CDATA[select e from spmu_Contract e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contractsTable" spacing="true" stylename="layoutblue">
        <filter id="filter"
                applyTo="contractsTable"
                dataLoader="contractsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="contractsTable"
                    width="100%"
                    dataContainer="contractsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="name"/>
                <column id="start"/>
                <column id="end"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="contractsTable.create"/>
                <button id="editBtn" action="contractsTable.edit"/>
                <button id="removeBtn" action="contractsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
